/* pages/detail/detail.wxss */
.font {
  color: #a0a1a2;
  background-color: #edf1f2 !important;
}

.detailImg {
  border-radius: 50%;
  display: block;
  height: 60px;
  width: 70px;
}
.hr {
  float: right;
}
.b {
  margin-left: 12px;
  display: block;
}
.van-cell {
  background-color: #edf1f2 !important;
}
.bg {
  width: 100%;
}
.wrapper {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.block {
  border-radius: 8px;
  width: 120px;
  height: 120px;
  background-color: #fff;
}
.van-loading {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.ziti {
  font-size: 12px;
  color: #a0a1a2;
  position: absolute;
  left: 50%;
  top: 54%;
  transform: translate(-50%, -50%);
}
