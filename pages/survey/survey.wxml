<!--pages/survey/survey.wxml-->
<mp-navigation-bar
  show="{{true}}"
  animated="{{true}}"
  color="#A0A1A2"
  background="#EDF1F2"
  back="{{true}}"
></mp-navigation-bar>
<!-- 用户状态栏 -->
<view class="status">
  <view class="leftStatus">
    <text class selectable="false" space="false" decode="false" style="color: #686786;">橘子</text>
    <image class="lian" src="/pages/image/lianjie.svg" lazy-load="false" binderror bindload />
    <text class selectable="false" space="false" decode="false">已监听177天</text>
  </view>
  <view class="rightStatus">
    <image class="rightImg" src mode="aspectFit" lazy-load="false" binderror bindload />
    <image
      class="arrow_right"
      src="/pages/image/arrow_right.svg"
      mode="aspectFit"
      lazy-load="false"
      binderror
      bindload
    />
  </view>
</view>

<!-- 分割线状态栏 -->
<van-divider hairline customStyle="border-color: #a0a1a2; margin: 0 40px;" />

<!-- 重新连接 -->
<view class="again">
  <view class="leftAgain">
    <image class="lian" src="/pages/image/duankai.svg" lazy-load="false" binderror bindload />
    <text class selectable="false" space="false" decode="false">连接失败</text>
  </view>
  <view class="rightAgain">
    <text class selectable="false" space="false" decode="false">重新连接</text>
    <image
      class="lian1"
      src="/pages/image/wenhao.svg"
      mode="aspectFit|aspectFill|widthFix"
      lazy-load="false"
      binderror
      bindload
    />
  </view>
</view>

<!-- 卡片1 -->
<view class="main">
  <!--正面的框  -->
  <view class="box b1" animation="{{animationMain1}}" bindtap="rotateFn1" data-id="1">
