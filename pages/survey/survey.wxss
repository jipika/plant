/* pages/survey/survey.wxss */

page {
  background-image: url(http://qingchun.hongquelin.com/zhinenghuajiang/image/beijing.jpg);
  background-size: 100% 100%;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}
navigator:focus,
input:focus,
text:focus,
view:focus {
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  -webkit-user-modify: read-write-plaintext-only;
}
.leftStatus > text:last-child {
  color: #a0a1a2;
  font-size: 10px;
}
.leftStatus > text:first-child {
  font-size: 20px;
  margin-bottom: 10rpx;
}
.status {
  display: flex;
  justify-content: space-between;
  margin: 0 20px;
}
.leftStatus text:first-child {
  display: block;
}
.leftBox text {
  display: block;
  margin-top: 7px;
  margin-left: 20px;
  font-size: 28rpx;
  color: #000;
}
.rightBox text:last-child {
  font-size: 10px;
  color: gray;
}
.rightBox text:first-child {
  font-size: 32rpx;
  color: #000;
  font-weight: 600;
}
.rightBox text {
  display: block;
  margin-top: 7px;
  margin-left: 20px;
  font-size: 28rpx;
  margin-right: 20px;
  text-align: right;
}
.red {
  color: #990000;
}
.box {
  position: absolute;
  top: 0;
  left: 0;
  width: 80%;
  height: 200prx;
  transition: all 1s;
  backface-visibility: hidden;
  border-radius: 10px;
  cursor: pointer;
}
.box image {
  border-radius: 10px;
  width: 100%;
  height: 100%;
}
.b1 {
  opacity: 0.8;
  width: 100%;
  height: 8vh;
  background: #fff;
  display: flex;
  justify-content: space-between;
}
.b2 {
  opacity: 0.8;
  width: 100%;
  height: 8vh;
  background: #fff;
  transform: rotateX(-180deg);
}
.main {
  position: absolute;
  top: 40%;
  left: 50%;
  width: 90%;
  height: 200prx;
  transform: translate(-50%, -50%);
}
.mian2 {
  position: absolute;
  top: 30%;
  left: 50%;
  width: 90%;
  height: 200prx;
  transform: translate(-50%, -50%);
}
.mian3 {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 90%;
  height: 200prx;
  transform: translate(-50%, -50%);
}
.mian4 {
  position: absolute;
  top: 60%;
  left: 50%;
  width: 90%;
  height: 200prx;
  transform: translate(-50%, -50%);
}
.mian5 {
  position: absolute;
  top: 70%;
  left: 50%;
  width: 90%;
  height: 200prx;
  transform: translate(-50%, -50%);
}
.arrow_right {
  width: 3vh;
  height: 3vh;
  padding: 10px 0 10px 10px;
}
.rightImg {
  width: 5vh;
  height: 5vh;
}
.again {
  display: flex;
  justify-content: space-between;
  margin: 0 20px;
}
.lian {
  width: 8px;
  height: 8px;
  display: inline-block;
}
.lian1 {
  position: relative;
  top: 5px;
  width: 20px;
  height: 19px;
  display: inline-block;
}
.leftAgain text {
  font-size: 10px;
}
.rightAgain text {
  color: #a0a1a2;
  font-size: 9px;
  border: 1px solid #a0a1a2;
  border-radius: 10px;
  -webkit-border-radius: 10px;
  -moz-border-radius: 10px;
  -ms-border-radius: 10px;
  -o-border-radius: 10px;
  padding: 3px 7px;
  margin-right: 5px;
}
