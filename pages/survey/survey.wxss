.box {
  position: absolute;
  top: 0;
  left: 0;
  width: 80%;
  height: 200prx;
  transition: all 1s;
  backface-visibility: hidden;
  border-radius: 10px;
  cursor: pointer;
}
.box image {
  border-radius: 10px;
  width: 100%;
  height: 100%;
}
